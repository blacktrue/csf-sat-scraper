{
    "name": "blacktrue/csf-sat-scraper",
    "description": "A PHP library to scrape CSF PDFs from SAT Mexico website.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Blacktrue\\CsfSatScraper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Blacktrue\\CsfSatScraper\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Cesar Aguilera",
            "email": "cesargnu29@gmail.com"
        }
    ],
    "require": {
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.0",
        "symfony/dom-crawler": "^7.0 || ^8.0",
        "symfony/css-selector": "^7.0 || ^8.0",
        "symfony/browser-kit": "^8.0",
        "symfony/http-client": "^8.0",
        "phpcfdi/image-captcha-resolver": "^0.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}
